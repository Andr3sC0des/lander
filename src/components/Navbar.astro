---
import Logo from "@/Icons/Logo.astro";
---

<nav class="navbar">
  <a href="/" class="logo">
    <Logo width="53px" height="40px" />
  </a>
</nav>

<style>
  .navbar{
    height: var(--navbar-height);
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--border-color);
    backdrop-filter: blur(24px);
    max-width: 1000px;
    margin: 0 auto;
  }
</style>