<section class="hero">
  <h1 animation="fadeIn" cycle="ease-in" duration="2s" class="title">A BEAUTIFUL DESIGN</h1>
  <h2 class="subtitle">LANDING PAGE</h2>
  <p class="description">Get started with your business.</p>
  <div class="buttons">
    <a class="btn-2" href="/docs">Get Started</a>
    <a class="btn" href="#">About Us</a>
  </div>
</section>

<script>
  import '../lib/GetAllAnimatedElements.js'
</script>

<style>
  .hero{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .subtitle {
    font-size: 64px;
    text-align: center;
  }
  .title {
    font-size: 64px;
    text-align: center;
    max-width: 1100px;
    font-weight: 900;
    margin-top: 3rem;
    drop-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
	}
  @media (max-width: 1080px) {
    .subtitle {
      font-size: 48px;
    }
    .title {
      font-size: 48px;
    }
  }
  .description {
    font-size: 20px;
    text-align: center;
    margin-top: 1rem;
    color: var(--secundary-color);
  }
  .btn{
    padding: 1rem 2rem;
    color: #000;
    border: none;
    font-size: 20px;
    border-radius: 0.5rem;
    background: var(--brand-color);   
  }
  .btn-2 {
    color: var(--main-color);
    border: none;
    padding: 1rem 2rem;
    font-size: 20px;
  }
  .buttons {
    overflow: hidden;
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    box-shadow: 0 0 1px rgba(255, 255, 255, 0.5);
    border-radius: 0.5rem;
  }
</style>